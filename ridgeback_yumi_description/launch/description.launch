<?xml version="1.0"?>
<launch>
	<arg name="config" default="base" />

	<!--  Hardware interfaces for YuMi joints and grippers -->    
    <arg name="arms_hardware_interface" default="VelocityJointInterface"/>
    <arg name="grippers_hardware_interface" default="EffortJointInterface"/>


	<param name="robot_description"
	     command="$(find ridgeback_yumi_description)/scripts/env_run $(find ridgeback_yumi_description)/urdf/configs/$(arg config) $(find xacro)/xacro '$(find ridgeback_yumi_description)/urdf/ridgeback_yumi.urdf.xacro' arms_interface:=$(arg arms_hardware_interface) grippers_interface:=$(arg grippers_hardware_interface)" />

	<node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" />
	<node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />
</launch>
